{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "off",
    "indent": ["error", 4],
    "max-len": ["error", { "code": 120 }],
    "arrow-body-style": "off",
    "no-param-reassign": ["error", { "props": false }]
  }
} 