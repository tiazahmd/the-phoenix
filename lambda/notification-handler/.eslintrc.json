{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["import"],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "rules": {
    "no-console": "off",
    "indent": ["error", 4],
    "max-len": ["error", { "code": 120 }],
    "arrow-body-style": "off",
    "no-param-reassign": ["error", { "props": false }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.js", "**/*.spec.js"]}]
  }
} 